{
  "name": "tempus-ring",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --noEmit && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check .",
    "fix": "biome check --write .",
    "type-check": "tsc --noEmit",
    "rust:fmt": "cd src-tauri && cargo fmt",
    "rust:fmt:check": "cd src-tauri && cargo fmt --check",
    "rust:lint": "cd src-tauri && cargo clippy -- -D warnings",
    "rust:check": "cd src-tauri && cargo check",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "check:all": "pnpm type-check && pnpm check && pnpm rust:fmt:check && pnpm rust:lint",
    "clean": "rm -rf dist",
    "prepare": "simple-git-hooks",
    "postinstall": "simple-git-hooks"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "@tauri-apps/api": "^2.7.0",
    "@tauri-apps/plugin-opener": "^2.4.0",
    "@tauri-apps/plugin-os": "^2.3.0",
    "lucide": "^0.539.0",
    "roughjs": "^4.6.6",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@playwright/test": "^1.49.1",
    "@tailwindcss/vite": "^4.1.11",
    "@tauri-apps/cli": "^2.7.1",
    "@types/node": "^24.2.0",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "simple-git-hooks": "^2.13.1",
    "tailwindcss": "^4.1.11",
    "typescript": "~5.9.2",
    "vite": "^7.0.6",
    "vitest": "^3.2.4"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm check:all",
    "commit-msg": "npx commitlint --edit $1"
  }
}
