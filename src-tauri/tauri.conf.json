{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Tempus Ring",
  "version": "0.1.0",
  "identifier": "com.tempusring.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Tempus Ring",
        "width": 300,
        "height": 650,
        "minWidth": 280,
        "minHeight": 400,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "alwaysOnTop": false,
        "center": true,
        "skipTaskbar": false
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false,
      "tooltip": "Tempus Ring - Focus Timer"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png", 
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [],
    "copyright": "Â© 2025 Tempus Ring",
    "category": "Productivity",
    "shortDescription": "A beautiful Pomodoro timer for focused work",
    "longDescription": "Tempus Ring is a cross-platform Pomodoro timer with multiple themes, internationalization support, and system tray integration. Stay focused and productive with customizable work and break intervals."
  },
  "plugins": {
    "notification": {
      "default": true
    },
    "globalShortcut": {
      "default": true  
    },
    "shell": {
      "open": true
    }
  }
}
